{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/images/(.*)",
            "dest": "frontend/images/$1"
        },
        {
            "src": "/style.css",
            "dest": "frontend/style.css"
        },
        {
            "src": "/script.js",
            "dest": "frontend/script.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}